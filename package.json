{
  "name": "prepack-webpack-plugin",
  "version": "1.0.2",
  "license": "BSD-3-Clause",
  "main": "./dist/PrepackPlugin.js",
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "babel": {
      "babelrc": true
    },
    "require": "babel-loader"
  },
  "dependencies": {
    "webpack-sources": "^1.0.1"
  },
  "description": "A webpack plugin for prepack.",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "coveralls": "^2.13.0",
    "eslint": "^3.19.0",
    "eslint-config-canonical": "^8.1.1",
    "flow-bin": "^0.44.0",
    "flow-copy-source": "^1.1.0",
    "husky": "^0.13.3",
    "nyc": "^10.2.0",
    "semantic-release": "^6.3.6",
    "webpack": "^3.5.5"
  },
  "peerDependencies": {
    "prepack": "0.x",
    "webpack": "^3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "keywords": [
    "webpack",
    "prepack",
    "plugin"
  ],
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "text-lcov"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/prepack-webpack-plugin"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "lint": "eslint ./src ./test && flow",
    "test": "NODE_ENV=test nyc --reporter=text ava --verbose --serial"
  }
}
